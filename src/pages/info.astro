---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Headpic from "../components/info/Headpic.astro";
import Navbar from "../components/Navbar.astro";
import BigLink from "../components/BigLink.astro";
import Section from "../components/info/Section.astro";
import Description from "../components/info/Description.astro";
import Grid from "../components/Grid.astro";
import Card from "../components/info/Card.astro";
import Deco from "../components/info/Deco.astro";
import FooterLink from "../components/FooterLink.astro";

const articles = [
  {
    title: "2024 星火计划报名",
    time: "2024-03",
    link: "#",
  },
  {
    title: "2023 挑战杯",
    time: "科协往事",
    link: "#",
  },
  {
    title: "2023 第五届虚拟仿真创意设计大赛",
    time: "科协往事",
    link: "#",
  },
  {
    title: "2023 从游节",
    time: "科协往事",
    link: "#",
  },
];

const tutorials = [
  {
    title: "2023 LaTeX",
    time: "科协往事",
    link: "../../posts/latex.html",
  },
  {
    title: "2023 Numpy",
    time: "科协往事",
    link: "../../posts/numpy.html",
  },
  {
    title: "2023 MATLAB",
    time: "科协往事",
    link: "../../posts/matlab.html",
  },
  {
    title: "2023 Zotero",
    time: "科协往事",
    link: "../../posts/Zotero.html",
  },
  {
    title: "更多内容，正在赶制……",
    time: "科协往事",
    link: "#",
  },
];
---

<Layout title="科协资讯">
  <header>
    <Headpic />
    <Navbar />
  </header>
  <main>
    <article>
      <Section>
        <Description slot="left">
          <h2>最近的文章</h2>
          <p>我们最近的一些文章在这里。</p>
          <BigLink>
            <a href="./styles/grid/index.html" class="description__link">
              前往列表页面
            </a>
          </BigLink>
        </Description>
        <Grid width="15em" gap="1.25rem">
          {
            articles.map((article) => (
              <Card>
                <a href={article.link}>
                  <Image
                    src={`https://picsum.photos/640/400.webp?blur=3&random=${Math.random()}`}
                    alt="占位图"
                    inferSize
                  />
                </a>
                <div slot="after">
                  <a href={article.link}>{article.title}</a>
                  <time>{article.time}</time>
                </div>
              </Card>
            ))
          }
        </Grid>
      </Section>
      <Section>
        <Description slot="left">
          <h2>教程</h2>
          <p>这里是一些教程。</p>
          <BigLink>
            <a href="./styles/grid/index.html"> 查看列表样式 </a>
          </BigLink>
        </Description>
        <Grid width="15em" gap="1.25rem">
          {
            tutorials.map((article) => (
              <Card>
                <a href={article.link}>
                  <Image
                    src={`https://picsum.photos/640/400.webp?blur=3&random=${Math.random()}`}
                    alt="占位图"
                    inferSize
                  />
                </a>
                <div slot="after">
                  <a href={article.link}>{article.title}</a>
                  <time>{article.time}</time>
                </div>
              </Card>
            ))
          }
        </Grid>
      </Section>
    </article>
  </main>
  <footer>
    <Deco />
    <FooterLink />
  </footer>
</Layout>

<style>
  article {
    display: grid;
    grid-template-columns: 1fr min(120ch, 100%) 1fr;
    margin: 4rem 1rem 6rem 1rem;
  }
  article > :global(*) {
    grid-column: 2;
  }
</style>